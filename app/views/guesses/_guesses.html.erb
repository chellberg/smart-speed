<div class="col-md-12">	
	 <div class="panel panel-info">
	<% @guesses.each do |guess| %>

 
	
	<div class="panel-heading">
	  <h3 class="panel-title">
		<%= link_to("Guess #{guess.id}", guess) %>: <%= guess.speed %>mph in a <%= guess.speed_limit %>mph zone
		</h3>
	</div>
	
	<div class="panel-body">
		<div class="row">
			<div class="col-xs-8">
				<ul class="guesses-stats">
					   <% unless @search.nil? %>
					<li><%= number_with_precision(guess.distance_from(@search), precision: 2) %> miles from search location</li>
					<p></p>
						         <% end %>
					<li>Address: <%= guess.full_address %></li>
						<% if guess.nearbys(50) %>
					<p></p>
					<li>Nearby guesses: 
					  <% guess.nearbys(50).each do |g| %>
					    <%= link_to(g.full_address, g) %>
					  <% end %>
					</li>
					    <% end %>		
			   </ul>  
			</div>
			<div class="col-xs-4">
				<%= image_tag "http://maps.google.com/maps/api/staticmap?size=175x130&sensor=false&zoom=14&markers=#{guess.latitude}%2C#{guess.longitude}" %>
			</div>     
		</div>
	</div>
  	 
  <% end %>
  </div>
</div>


