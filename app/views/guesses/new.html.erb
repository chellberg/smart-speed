<% provide(:title, 'Submit') %>
<div class="row">
	<div class="alert alert-info">Enter any address or intersection along the speed limit zone. </div>
</div>

<div class="row">
  	<div class="col-md-offset-3 col-md-6 col-md-offset-3">
	    <%= form_for(@guess, :html => { class: 'form-horizontal' } ) do |f|%>
	       <%= render 'shared/error_messages', object: f.object %>
			<fieldset>	
				<div class="form-group">
				    <%= f.label :address %>
				    <%= f.text_field :address, :class => "form-control", :placeholder => "123 Fake St" %>
				 </div>

				<div class="form-group">
				    <%= f.label :speed_limit, :class => "control-label" %>
				    <%= f.text_field :speed_limit, :class => "form-control", :type => "number", :placeholder => 35 %>
				 </div>

				<div class="form-group">
				    <%= f.label :speed, :class => "control-label"	  %>
				    <%= f.text_field :speed, :class => "form-control", :type => "number", :placeholder => 46  %>
				    </div>

				<div class="form-group">
				    <%= f.label :notes, :class => "control-label" %>
				    <%= f.text_area :notes, :class => "input-xlarge", :placeholder => "Watch out for the school zone..." %>
				</div>

				<div class="form-actions">
				<%= f.submit "I solemnly swear that this is good advice", class: "btn btn-lrg btn-primary" %>
				</div>
	       </fieldset>
										      	 <% end %>
       
</div>
</div>
